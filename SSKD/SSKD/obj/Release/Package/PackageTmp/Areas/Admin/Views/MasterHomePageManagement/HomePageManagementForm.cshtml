        //btn
        obj.Common_mess_btn_Cancel = "@Html.Raw(tw_Lang.Common_mess_btn_Cancel)";
        obj.Common_mess_btn_Confirm = "@Html.Raw(tw_Lang.Common_mess_btn_Confirm)";

        return obj;
    }
