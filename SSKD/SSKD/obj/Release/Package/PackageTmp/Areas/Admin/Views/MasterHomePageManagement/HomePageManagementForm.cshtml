    //function cho editor
    function createEditor(languageCode, id, value) {
        //var ArticleContentDivHeight = parseInt($(window).height()) - $('#ArticleContentInfor').height();
        var editor = CKEDITOR.replace(id, { language: languageCode, height: 200 });
