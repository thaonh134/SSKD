<script language="JavaScript">
    
    function login_check() {
        var f = document.mreg;
        if (!f.usid.value) {
            f.usid.focus();
            return;
        }
        if (!f.u_pass.value) {
            f.u_pass.focus();
            return;
        }
        f.submit();
    }

    function login_st() {
        var f = document.mreg;
        if (!f.usid.value) {
            f.usid.focus();
            return;
        }
    }

    //폼 체크부분(값을 비교후 true 이면 값을 submit 함)
    function submitForm() {
        var UserName = $("#FormLogin #UserName");
        var Password = $("#FormLogin #Password");
        var CaptchaCode = $("#FormLogin #CaptchaCode");
        if (!UserName) {
            alert('Please enter your ID!');
            f.usid.focus();
            return;
        }
        if (!Password) {
            alert('Please enter your Password!');
            f.u_pass.focus();
            return;
        }
        if (!CaptchaCode) {
            alert('Please enter your CaptchaCode!');
            f.u_pass.focus();
            return;
        }
        $("#FormLogin").submit();

        document.mreg.submit();
    }
</script>
